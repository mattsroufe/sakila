<h1><%= @customer.full_name %></h1>

<table>
  <thead>
    <th>Email</th>
    <th>Address</th>
    <th>Country</th>
    <th>City</th>
    <th>Phone</th>
    <th>Store</th>
  </thead>
  <tbody>
    <tr>
      <td><%= @customer.email.downcase %></td>
      <td><%= @customer.address.address %></td>
      <td><%= @customer.address.country.country %></td>
      <td><%= "#{@customer.address.city.city}, #{@customer.address.district}" %></td>
      <td><%= @customer.address.phone %></td>
      <td><%= @customer.store_id %></td>
    </tr>
  </tbody>
</table>

<h2>Rental history</h2>

<% if @customer.rentals.unreturned.any? %>

<h3>Unreturned rentals</h3>

<table>
  <thead>
    <th>Rental ID</th>
    <th>Title</th>
    <th>Rental date</th>
  </thead>
  <tbody>
    <% @customer.rentals.unreturned.each do |rental| %>
      <tr>
        <td><%= link_to rental.to_param, rental_path(rental) %></td>
        <td><%= link_to rental.film, film_path(rental.film) %></td>
        <td><%= rental.rental_date.to_formatted_s(:db) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Returned rentals</h3>

<% end %>

<% if @customer.rentals.returned.any? %>

<table>
  <thead>
    <th>Rental ID</th>
    <th>Title</th>
    <th>Rental date</th>
    <th>Return date</th>
  </thead>
  <tbody>
    <% @customer.rentals.returned.each do |rental| %>
      <tr>
        <td><%= link_to rental.to_param, rental_path(rental) %></td>
        <td><%= link_to rental.film, film_path(rental.film) %></td>
        <td><%= rental.rental_date.to_formatted_s(:db) %></td>
        <td><%= rental.return_date.to_formatted_s(:db) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<p>No rentals found.</p>

<% end %>
